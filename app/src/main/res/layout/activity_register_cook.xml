<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="uott.seg.mealerproject.activities.RegisterCookActivity">

    <include
        android:id="@+id/include"
        layout="@layout/activity_register"
        android:layout_width="420dp"
        android:layout_height="296dp"
        tools:layout_editor_absoluteX="-5dp"
        tools:layout_editor_absoluteY="-1dp" />

    <Button
        android:id="@+id/btnAddCook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="28dp"
        android:text="Regist"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/tvVoidCheck"
        android:layout_width="161dp"
        android:layout_height="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Load a Void Check Here :"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/teDesc" />


    <EditText
        android:id="@+id/teDesc"
        android:layout_width="340dp"
        android:layout_height="46dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="12dp"
        android:background="@android:drawable/alert_light_frame"
        android:ems="10"
        android:inputType="textPostalAddress|textMultiLine"
        android:scrollbarStyle="insideInset"
        android:scrollbars="horizontal|vertical"
        android:singleLine="false"
        android:textAlignment="viewStart"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvCookDesc" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="349dp"
        android:layout_height="101dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="11dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvVoidCheck"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/btnLoad"
        android:layout_width="98dp"
        android:layout_height="40dp"
        android:layout_marginStart="36dp"
        android:text="Load"
        app:layout_constraintStart_toEndOf="@+id/tvVoidCheck"
        app:layout_constraintTop_toBottomOf="@+id/teDesc" />

    <TextView
        android:id="@+id/tvCookDesc"
        android:layout_width="140dp"
        android:layout_height="21dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="Cook Description :"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include" />


</androidx.constraintlayout.widget.ConstraintLayout>