<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical">

    <Button
        android:id="@+id/btnAccept"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="84dp"
        android:layout_height="24dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:text="Accept"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/btnReject"
        app:layout_constraintTop_toBottomOf="@+id/tvMyCuisineType" />

    <TextView
        android:id="@+id/tvMyCuisineType"
        android:layout_width="0dp"
        android:layout_height="22dp"
        android:background="#c1e8ff"
        android:text="Cuisine Type"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/tvMyMealName" />

    <TextView
        android:id="@+id/tvMyMealName"
        android:layout_width="0dp"
        android:layout_height="22dp"
        android:background="#c1e8ff"
        android:text="Meal Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvMyMealType"
        android:layout_width="120dp"
        android:layout_height="22dp"
        android:background="#c1e8ff"
        android:text="Meal Type"
        app:layout_constraintStart_toEndOf="@+id/tv3"
        app:layout_constraintTop_toBottomOf="@+id/tvMyMealName" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="82dp"
        android:layout_height="22dp"
        android:background="@color/white"
        android:text="Meal Name:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv3"
        android:layout_width="82dp"
        android:layout_height="22dp"
        android:background="@color/white"
        android:text="Meal Type:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv1" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_marginStart="2dp"
        android:background="@color/white"
        android:text="Cuisine Type :"
        app:layout_constraintStart_toEndOf="@+id/tvMyMealType"
        app:layout_constraintTop_toBottomOf="@+id/tvMyMealName" />

    <Button
        android:id="@+id/btnReject"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="84dp"
        android:layout_height="24dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:text="Reject"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvMyCuisineType" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:text="Pickup Time :"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvMyMealType" />

    <TextView
        android:id="@+id/tvMyPickupTime"
        android:layout_width="0dp"
        android:layout_height="22dp"
        app:layout_constraintEnd_toStartOf="@+id/btnAccept"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/tvMyMealType" />

</androidx.constraintlayout.widget.ConstraintLayout>