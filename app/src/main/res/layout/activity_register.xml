<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="uott.seg.mealerproject.activities.RegisterActivity">


    <EditText
        android:id="@+id/teFName"
        android:layout_width="210dp"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="First Name"
        android:inputType="textPersonName"
        android:singleLine="true"
        android:textColorHint="#AAABAE"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/tvFName"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvFName"
        android:layout_width="126dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="32dp"
        android:text="First Name :"
        android:textAlignment="viewEnd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/teLName"
        android:layout_width="210dp"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        android:ems="10"
        android:hint="Last Name"
        android:inputType="textPersonName"
        android:textColorHint="#AAABAE"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/tvLName"
        app:layout_constraintTop_toBottomOf="@+id/teFName" />

    <EditText
        android:id="@+id/tePwd2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:ems="10"
        android:hint="Retype your password"
        android:inputType="textPassword"
        android:textColorHint="#AAABAE"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/tvPwd2"
        app:layout_constraintTop_toBottomOf="@+id/tePwd" />

    <TextView
        android:id="@+id/tvPwd"
        android:layout_width="126dp"

        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Password :"
        android:textAlignment="viewEnd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvEmail" />

    <EditText
        android:id="@+id/teEmail"
        android:layout_width="210dp"
        android:layout_height="39dp"
        android:layout_marginStart="16dp"
        android:ems="10"
        android:hint="your.email@uOttawa.ca"
        android:inputType="textEmailAddress"
        android:textColorHint="#AAABAE"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/tvEmail"
        app:layout_constraintTop_toBottomOf="@+id/teLName" />

    <EditText
        android:id="@+id/teAddr"
        android:layout_width="343dp"
        android:layout_height="48dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="4dp"
        android:background="@android:drawable/alert_light_frame"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textPostalAddress|textMultiLine"
        android:singleLine="false"
        android:textAlignment="viewStart"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAddr" />

    <TextView
        android:id="@+id/tvAddr"
        android:layout_width="111dp"
        android:layout_height="22dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="8dp"
        android:text="Address :"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPwd2" />

    <View
        android:id="@+id/divider"
        android:layout_width="409dp"
        android:layout_height="1dp"
        android:layout_marginTop="4dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/teAddr" />

    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="126dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:text="Email:"
        android:textAlignment="viewEnd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvLName" />

    <EditText
        android:id="@+id/tePwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColorHint="#AAABAE"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/tvPwd"
        app:layout_constraintTop_toBottomOf="@+id/teEmail" />

    <TextView
        android:id="@+id/tvPwd2"
        android:layout_width="126dp"
        android:layout_height="19dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="24dp"
        android:text="Retype Password :"
        android:textAlignment="viewEnd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPwd" />

    <TextView
        android:id="@+id/tvLName"
        android:layout_width="126dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Last Name :"
        android:textAlignment="viewEnd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvFName" />

</androidx.constraintlayout.widget.ConstraintLayout>